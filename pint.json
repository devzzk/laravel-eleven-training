{
    "preset": "laravel",
    "rules": {
        "no_superfluous_phpdoc_tags": false,
        "ordered_imports": false,
        "not_operator_with_successor_space": false,
        "unary_operator_spaces": false,
        "phpdoc_align": false,
        "concat_space": {
            "spacing": "one"
        },
        "class_attributes_separation": {
            "elements": {
                "const": "none"
            }
        }
    },
    "exclude": [
        "lang",
        "config",
        "database",
        "resources",
        "modules",
        "tests",
        "public",
        "vendor"
    ]
}
